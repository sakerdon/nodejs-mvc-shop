<div class="card">
  <div class="card-content">
    <span class="card-title">{{goodsItem.title}}</span>
    <p class="price">{{goodsItem.price}} RUB</p>
  </div>
  <div class="card-action">
    <a href="#{{goodsItem.id}}">Add to cart</a>
  </div>
  <div class="card-image">
    <img src="{{goodsItem.image}}" alt="{{goodsItem.title}}">
  </div>
</div>